<div class="page-header">
  <h1>
    Mountains
    <a href="/mountains/new" class="btn btn-lg btn-success">New Mountain</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Mountain</th>
        <th>State</th>
        <th>Terrain difficulty</th>
        <th>Ski acreage</th>
        <th>Details</th>
        <th>Actions</th>
      </tr>

      <% @mountains.each do |mountain| %>
      <tr>
        <td><%= mountain.mountain %></td>
        <td><%= mountain.state %></td>
        <td><%= mountain.terrain_difficulty %></td>
        <td><%= mountain.ski_acreage %></td>
        <td><%= mountain.details %></td>
        <td>
          <a href="/mountains/<%= mountain.id %>" class="btn btn-primary">Show</a>
          <a href="/mountains/<%= mountain.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_mountain/<%= mountain.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
